{
  "manifest_version": 2,
  "name": "DragAndScale Controller",
  "description": "A controller for the popular Twitch.tv stream defense game.",
  "version": "0.1",
  "author": "Mariusz Dabrowski",
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*", "http://twitch.tv/*"],
      "run_at": "document_end",
      "js": [
        "js/overlay/controller-create.js",
        "js/overlay/drag-and-scale.js",
        "js/overlay/render-ui.js",
        "js/overlay/settings/opacity.js",
        "js/overlay/send-command.js",
        "js/overlay/tabs.js",
        "js/overlay/account-list.js",
        "js/overlay/disable-drag.js",
        "js/overlay/controller.js"
      ],
      "css": ["css/overlay.css"]
    }
  ],  
  "browser_action": {
    "default_title": "DragAndScale Controller",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/128x128.png"
    }
  },
  "permissions": ["tabs", "storage"],
  "icons": {
    "128": "images/app-icon-128x128.png"
  }
 }
 